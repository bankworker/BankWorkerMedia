<link rel="stylesheet" href="/stylesheets/index.css" />
<div class="container-fluid" ng-app="myApp" ng-controller="myCtrl">
  <div class="row container-main">
    <div class="col-lg-2 no-padding container-left">
      <div class="space-10"></div>
      <div class="bank-logo">
        <img ng-src="\{{model.bankLogo}}" class="img-responsive" alt="">
      </div>
      <div class="space-60"></div>
      <div class="branch-logo">
        <img ng-src="\{{model.branchLogo}}" class="img-responsive" alt="">
      </div>
      <div class="options-bar">
        <ul>
          <li ng-click="onSignOut()">退出</li>
          <li ng-if="!model.isFullScreen" ng-click="onFullScreen()">最大化</li>
          <li ng-if="model.isFullScreen" ng-click="onNormalScreen()">最小化</li>
        </ul>
      </div>
    </div>
    <div class="col-lg-10 no-padding container-right" ng-style="model.branchBackImageStyle">
      <div class="media-image" ng-if="model.isImageMedia">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic"
                ng-repeat="mediaDetail in model.imageMediaList"
                data-slide-to="mediaDetail.mediaModuleNumber"
                ng-class="{'active': mediaDetail.mediaModuleNumber == 0}"></li>
          </ol>
          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div ng-repeat="mediaDetail in model.imageMediaList"
                 ng-class="{'active': mediaDetail.mediaModuleNumber == 0}"
                 class="item" style="margin: 0 auto; text-align: center">
              <img ng-src="\{{mediaDetail.mediaDetailContent}}" class="img-responsive">
              <div class="carousel-caption">
                <p ng-bind="model.textMemo"></p>
              </div>
            </div>
          </div>
          <div class="carousel-audio">
            <i ng-class="model.isAudioPlay ? 'icon-volume-up':'icon-volume-off'" ng-click="onAudioPlay()"></i>
            <audio ng-src="\{{model.audioUrl}}" controls="controls" style="display: none" id="background-audio"></audio>
          </div>
          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="media-video" ng-if="model.isVideoMedia">
        <video ng-src="\{{model.videoUrl}}" controls="controls">
          您使用的浏览器不支持视频播放，请使用Chrome浏览器。
        </video>
      </div>
      <div class="media-module">
        <ul>
          <li ng-repeat="media in model.mediaModuleList"
              ng-class="media.mediaModuleClass"
              ng-bind="media.mediaModuleName"
              ng-click="onChangeMedia(media.mediaModuleID, media.mediaModuleType)"></li>
        </ul>

      </div>
    </div>
  </div>
</div>
<script src="/javascripts/view/index.js"></script>